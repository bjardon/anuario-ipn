<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.register.Step3">
    <children>
        <VBox prefHeight="600.0" prefWidth="900.0" spacing="10.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox spacing="10.0">
                    <children>
                        <Label styleClass="heading" text="Anuario Escolar">
                            <font>
                                <Font size="60.0"/>
                            </font>
                        </Label>
                        <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                            <children>
                                <ImageView cache="true" fitHeight="74.0" fitWidth="101.0" pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="@/resources/img/busto-ipn.png"/>
                                    </image>
                                </ImageView>
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_RIGHT">
                            <children>
                                <Label styleClass="small-heading" text="Registro de alumnos: Paso 3">
                                    <font>
                                        <Font name="System Bold" size="20.0"/>
                                    </font>
                                </Label>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                        <HBox>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                            <children>
                                <Label text="Estos campos son opcionales, puedes omitirlos si quieres."
                                       wrapText="true"/>
                            </children>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <Label prefWidth="130.0" text="Comentarios"/>
                                <TextArea fx:id="txaComment" wrapText="true" HBox.hgrow="ALWAYS"/>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                        <HBox spacing="10.0">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                            <children>
                                <Label prefWidth="130.0" text="Fotografia"/>
                                <Button mnemonicParsing="false" onAction="#btnExploreAction" text="Examinar"/>
                                <TextField fx:id="txtImagePath" editable="false" HBox.hgrow="ALWAYS"/>
                            </children>
                        </HBox>
                        <HBox alignment="BOTTOM_RIGHT" spacing="10.0" VBox.vgrow="ALWAYS">
                            <children>
                                <HBox alignment="BOTTOM_LEFT" spacing="10.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#btnBackAction" text="&lt; Volver"/>
                                        <Button mnemonicParsing="false" onAction="#btnCancelAction" text="Cancelar"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </HBox>
                                <HBox alignment="BOTTOM_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label fx:id="error" styleClass="error" text="Error goes here"
                                               HBox.hgrow="ALWAYS"/>
                                        <Button mnemonicParsing="false" onAction="#btnContinueAction"
                                                text="Continuar &gt;"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
